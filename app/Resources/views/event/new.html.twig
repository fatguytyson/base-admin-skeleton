{% extends "::admin.html.twig" %}

{% block title %}Event Creation | {{ parent() }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Event Creation</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-xs-12">
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-success" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('admin_event_index') }}" class="btn btn-warning">Back to the list</a>
        </li>
    </ul>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/ivoryckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('bundles/ivoryckeditor/adapters/jquery.js') }}"></script>
    {{ form_javascript(form) }}
{% endblock %}