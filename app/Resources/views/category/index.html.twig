{% extends 'admin.html.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">Categories list</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td><a href="{{ path('admin_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                        <td>{{ category.title }}</td>
                        <td>
                            <ul class="list-inline">
                                <li>
                                    <a href="{{ path('admin_category_show', { 'id': category.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_category_edit', { 'id': category.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <a href="{{ path('admin_category_new') }}" class="btn btn-success">Create a new category</a>
        </div>
    </div></div>
{% endblock %}
