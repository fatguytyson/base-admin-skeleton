{% extends 'emails/filter/'~email_filter~'.twig' %}

{% block subject %}Password Reset : {{ site_name }}{% endblock %}

{% block body_html %}
    <h1>Hello {{ user.username }}!</h1>

    <p>To reset your password - please visit {{ url('resetting_reset', {'token': user.confirmationToken}) }}</p>

    <p>Regards,<br/>
    {{ site_name }}</p>

    <p>If you did not request this email, please contact us to have the issue resolved.</p>
{% endblock %}

{% block body_text %}
    Hello {{ user.username }}!

    To reset your password - please visit {{ url('resetting_reset', {'token': user.confirmationToken}) }}

    Regards,
    {{ site_name }}

    If you did not request this email, please contact us to have the issue resolved.
{% endblock %}