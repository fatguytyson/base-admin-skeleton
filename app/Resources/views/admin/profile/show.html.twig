{% extends 'admin.html.twig' %}

{% block title %}Profile{{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">Profile</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ profile.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ profile.name }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ profile.phone }}</td>
                        </tr>
                        <tr>
                            <th>Truck</th>
                            <td>{{ profile.truck }}</td>
                        </tr>
                        <tr>
                            <th>Location</th>
                            <td>{{ profile.location }}</td>
                        </tr>
                        <tr>
                            <th>Stripeuser</th>
                            <td>{{ profile.stripeUser }}</td>
                        </tr>
                        <tr>
                            <th>Rating</th>
                            <td>{{ profile.rating }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="panel-footer">
                                        <a href="{{ path('admin_profile_index') }}" class="btn btn-default">Back to the list</a>
<a href="{{ path('admin_profile_edit', { 'id': profile.id }) }}" class="btn btn-warning">Edit</a><div class="pull-right">
    {{ form_start(delete_form) }}
    <input type="submit" value="Delete" class="btn btn-danger">
    {{ form_end(delete_form) }}
</div></div>
            </div>
        </div>
    </div>

{% endblock %}
