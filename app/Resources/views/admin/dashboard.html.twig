{% extends "::admin.html.twig" %}

{% block title %}Dashboard {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    {% if data is defined %}
    <div class="row">
        <div class="col-xs-12">
            {% for panel in data %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    {% if panel.type ends with 'Count'  %}
                        <i class="fa fa-bar-chart-o fa-fw"></i>
                    {% elseif panel.type starts with 'Person' %}
                        <i class="fa fa-comments fa-fw"></i>
                    {% else %}
                        <i class="fa fa-bell fa-fw"></i>
                    {% endif %}
                    {{ panel.type }}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    {% if panel.type ends with 'Count'  %}
                        <div id="{{ panel.element }}"></div>
                    {% elseif panel.type starts with 'Person' %}
                        <ul class="chat">
                            {% for person, quotes in panel.data %}
                            {% for quote in quotes %}
                            <li class="left clearfix">
                                <div class="chat-body clearfix">
                                    <div class="header">
                                        <strong class="primary-font">{{ person }}</strong>
                                    </div>
                                    <p>{{ quote.data }}</p>
                                </div>
                            </li>
                            {% endfor %}
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>
                            {% for entry, bit in panel.data %}
                            <span class="label label-default">{{ entry }}</span>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
            {% endfor %}
        </div>
        <!-- /.col-lg-8 -->
    </div>
    <!-- /.row -->
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if data is defined %}
    <script type="text/javascript">
        {% for panel in data %}
        {% if panel.type ends with 'Count'  %}
        Morris.Bar({
            element: '{{ panel.element }}',
            data: [
        {% for person, info in panel.data %}
                { y: '{{ person }}'{% for i, bit in info %}, '{{ bit.category }}': {{ bit.data }}{% endfor %} },
        {% endfor %}
            ],
            xkey: 'y',
            ykeys: ['{{ panel.categories | escape | join("', '") | raw }}'],
            labels: ['{{ panel.categories | escape | join("', '") | raw }}']
        });
        {% endif %}
        {% endfor %}
    </script>
    {% endif %}
{% endblock %}