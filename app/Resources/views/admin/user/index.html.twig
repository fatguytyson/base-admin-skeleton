{% extends 'admin.html.twig' %}

{% block title %}Users list{{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">Users list</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="pull-right"><a href="{{ path('admin_user_new') }}" class="btn btn-xs btn-success">Create a new user</a></div>
                    Users
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="index-table" style="width: 100%;">
                        <thead>
                        <tr>
                                                                                                <th data-priority="1">Id</th>
                                                                                                                            <th>Username</th>
                                                                                                                            <th>Usernamecanon</th>
                                                                                                                            <th>Email</th>
                                                                                                                            <th>Emailcanon</th>
                                                                                                                            <th>Enabled</th>
                                                                                                                            <th>Password</th>
                                                                                                                            <th>Lastlogin</th>
                                                                                                                            <th>Expired</th>
                                                                                                                            <th>Expiresat</th>
                                                                                                                            <th>Locked</th>
                                                                                                                            <th>Confirmationtoken</th>
                                                                                                                            <th>Passwordrequestedat</th>
                                                                                                                            <th>Roles</th>
                                                                                        <th data-priority="2">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                        <tr>
                                    <td><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.usernameCanon }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.emailCanon }}</td>
                                    <td>{% if user.enabled %}Yes{% else %}No{% endif %}</td>
                                    <td>{{ user.password }}</td>
                                    <td>{% if user.lastLogin %}{{ user.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if user.expired %}Yes{% else %}No{% endif %}</td>
                                    <td>{% if user.expiresAt %}{{ user.expiresAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if user.locked %}Yes{% else %}No{% endif %}</td>
                                    <td>{{ user.confirmationToken }}</td>
                                    <td>{% if user.passwordRequestedAt %}{{ user.passwordRequestedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if user.roles %}{{ user.roles|join(', ') }}{% endif %}</td>
                                    <td>
                                            <a href="{{ path('admin_user_show', { 'id': user.id }) }}" class="btn btn-show">Show</a>
                                            <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" class="btn btn-edit">Edit</a>
                                        {% if is_granted('ROLE_ALLOWED_TO_SWITCH') %}<a href="{{ path('user_dashboard', {'_switch_user': user.username}) }}" class="btn btn-info">Impersonate</a>{% endif %}
                                    </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('vendor/datatables/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('vendor/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#index-table').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
