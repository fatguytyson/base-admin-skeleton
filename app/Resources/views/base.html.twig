<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block meta %}
        {% if author is defined %}<meta name="author" content="{{ author }}">{% endif %}
        {% if description is defined %}<meta name="description" content="{{ description }}">{% endif %}
        {% if keywords is defined %}<meta name="keywords" content="{{ keywords }}">{% endif %}
        <meta name="canonical" content="{{ canonical is defined ? canonical : url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">
    {% endblock %}
    <title>{% block title %}{{ site_name }} - {{ site_tag }}{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('css/theme.css') }}" rel="stylesheet" type="text/css"/>
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.png') }}"/>
    <link rel="apple-touch-icon image_src" href="{{ asset('favicon.png') }}">
</head>
<body>
{% block body %}
    <!-- Preloader -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- /Preloader -->
    <!-- Page Header -->
    <header id="home" data-stellar-background-ratio="0.4">

        <!-- Navigation -->
        <nav id="navigation" class="navbar">
            <div class="container">

                <!-- Navigation Header -->
                <div class="navbar-header">

                    <!-- Toggle Button -->
                    <button type="button"
                            class="navbar-toggle collapsed"
                            data-toggle="collapse"
                            data-target="#main-menu"
                            aria-expanded="false"
                            aria-controls="main-menu">

                        <i class="fa fa-fw fa-1d5x fa-align-justify"></i>
                    </button>
                    <!-- /Toggle Button -->

                    <!-- Brand -->
                    <a href="#" class="brand">

                        <!-- Big Logo -->
                        <div class="logo-big-container">

                            <!-- Dark Logo -->
                            <div class="logo-dark">
                                <img width="250" src="images/newhawlitlogo.png">
                            </div>
                            <!-- /Dark Logo -->

                            <!-- White Logo -->
                            <div class="logo-white">
                                <img width="250" src="images/newhawlitlogo.png">
                            </div>
                            <!-- /White Logo -->

                        </div>
                        <!-- /Big Logo -->

                        <!-- Small Logo -->
                        <div class="logo-small-container" style="padding:10px;">

                            <!-- Dark Logo -->
                            <div class="logo-dark">
                                <img src="images/newhawlitlogo-small.png">
                            </div>
                            <!-- /Dark Logo -->

                            <!-- White Logo -->
                            <div class="logo-white">
                                <img src="images/newhawlitlogo-small.png">
                            </div>
                            <!-- /White Logo -->

                        </div>
                        <!-- /Small Logo -->

                    </a>
                    <!-- /Brand -->

                </div>
                <!-- /Navigation Header -->

                <!-- Navigation -->
                <div id="main-menu" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#end">How It Works</a></li>
                        <li><a href="#partnership">Partnership</a></li>
                        <li><a href="#sign-up">Sign Up</a></li>
                    </ul>
                </div>
                <!-- /Navigation -->

            </div>
        </nav>
        <!-- /Navigation -->

        <!-- Welcome Text -->
        <div class="full-wh relative" data-stellar-ratio="0.6">
            <div class="container">
                <div class="col-md-12 slide-background-container" style="position:absolute;" >
                    <img class="fadeIn slide-background" style="max-width:100%;" src="/images/truck_bg.png">
                </div>
                <div class="col-md-6">
                    <div class="full-wh">


                        <div id="text1" class="home-lead animated wow fadeInLeft" style="position:absolute;" data-wow-duration="1.3s" data-wow-delay="0.3s">
                            <p class="slide-text">Make Money With Your Truck</p>
                        </div>
                        <div id="text2" style="display:none;position:absolute;">
                            <p class="slide-text">Fill Out Your Profile</p>
                        </div>
                        <div id="text3" style="display:none;position:absolute;">
                            <p class="slide-text">Sign Up Now To Get 1 Year Free! ($120 Value)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="#sign-up">SIGN UP</a></a></p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 text-center hidden-sm hidden-xs" style="position:relative;padding-top:80px;">
                    <div id="phone_truck" class="full-wh" style="position:absolute; display:none;">
                        <img style="width:440px;" src="images/phone_truck.png" class="animated wow" data-wow-duration="2s">
                    </div>
                    <div id="couch_truck" class="full-wh" style="position:absolute;">
                        <img style="width:440px" src="images/couch.png" class="animated wow fadeInRight" data-wow-duration="2s">
                    </div>

                </div>


            </div>
        </div>
        <!-- /Welcome Text -->

    </header>
    <!-- /Page Header -->
    <!-- Page Content -->
    <main class="main-container">
        {% include "sprites/nav.html.twig" %}
            {% block content %}
        {% endblock %}
    </main>
    <!-- /Page Content -->

    <!-- Page Footer -->
    <footer id="footer" class="footer">
        <div class="container">
            <div class="row">
                <div class="col-xs-8">
                    &copy; 2017&copy; Hawlit.com. All rights reserved.
                </div>
                <div class="col-xs-4 footer-social">
                    <a href="#" class="icon fa fa-fw fa-facebook"></a>
                    <a href="#" class="icon fa fa-fw fa-twitter"></a>
                    <a href="#" class="icon fa fa-fw fa-google-plus"></a>
                </div>
            </div>
        </div>
    </footer>
    <!-- /Page Footer -->

    <!-- Scroll To Top -->
    <div id="scroll-to-top" class="scroll-to-top scroll-hided">
        <i class="icon fa fa-angle-up"></i>
    </div>
    <!-- /Scroll To Top -->

    <!-- Modal: Result Message -->
    <div class="modal fade" id="result" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="fa fa-times"></i>
                    </button>
                    <div class="modal-title h3 section-title title-line">Sign Up Successful</div>
                </div>
                <div class="modal-body">
                    <p class="modal-result h4"></p>
                </div>
            </div>
        </div>
    </div>
    <!-- /Modal: Result Message -->
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/jquery-3.2.1.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/popper.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
{% endblock %}
</body>
</html>
