{% extends "::admin.html.twig" %}

{% block title %}Testimonial | {{ parent() }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Testimonial</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-xs-12">
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ testimonial.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ testimonial.image }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ testimonial.content }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ testimonial.title }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_testimonial_index') }}" class="btn btn-warning">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_testimonial_edit', { 'id': testimonial.id }) }}" class="btn btn-success">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
</div>
{% endblock %}
