{% extends 'admin.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="page-header">Seasons list</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for season in seasons %}
                        <tr>
                            <td><a href="{{ path('admin_season_show', { 'id': season.id }) }}">{{ season.title }}</a></td>
                            <td>
                                <ul class="list-inline">
                                    <li>
                                        <a href="{{ path('admin_season_show', { 'id': season.id }) }}" class="btn btn-info">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin_season_edit', { 'id': season.id }) }}" class="btn btn-warning">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <a href="{{ path('admin_season_new') }}" class="btn btn-success">Create a new season</a>
            </div>
        </div>
    </div>
{% endblock %}
